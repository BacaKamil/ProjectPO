<Window x:Class="ProjectPO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPO"
        mc:Ignorable="d"
        Title="Hotel App" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.20*">
            </ColumnDefinition>
            <ColumnDefinition>
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Background="gray"></StackPanel>
        <StackPanel VerticalAlignment="Center" Background="gray">
            <Button x:Name="ReservationButton" Height="50" Content="Reservation" Margin="5" Click="ReservationButton_Click"/>
            <Button x:Name="ListButton" Height="50" Content="List" Margin="5" Click="ListButton_Click"/>
        </StackPanel>
        <ContentControl x:Name="View" Grid.Column="1">
            <local:ReservationScreen></local:ReservationScreen>
        </ContentControl>
    </Grid>
</Window>
